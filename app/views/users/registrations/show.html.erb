<h1>Hello</h1>

<% if current_user.admin? %>
    <%= link_to 'Animal Planet', rails_admin.dashboard_path, class: "uk-button uk-button-default" %><br>
<% end %>

<%= image_tag @user.avatar.url(:medium) %><br>
<span class="uk-text-bold">Name:</span>             <%= @user.first_name %> <%= @user.last_name %><br>
<span class="uk-text-bold">Email:</span>            <%= @user.email %><br>
<span class="uk-text-bold">Country: </span>         <%= @user.address.country %><br>
<span class="uk-text-bold">City:</span>             <%= @user.address.city %><br>
<span class="uk-text-bold">Street:</span>           <%= @user.address.street %><br>
<span class="uk-text-bold">Home number:</span>      <%= @user.address.home_number %><br>
<span class="uk-text-bold">Professions:</span><br>  <% @user.professions.each do |p| %>
                                                    - <%= p.prof_name %><br>
                                                    <% end %>

<%= link_to 'Edit User', edit_user_registration_path, class: "uk-button uk-button-default" %>
