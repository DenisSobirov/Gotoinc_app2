<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :put, multipar: true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :about_me %><br />
    <%= f.text_field :about_me %>
  </div>

  <%= f.fields_for :address do |ff| %>

    <div class="field">
      <%= ff.label :country %><br />
      <%= ff.text_field :country %>
    </div>

    <div class="field">
      <%= ff.label :city %><br />
      <%= ff.text_field :city %>
    </div>

    <div class="field">
      <%= ff.label :street %><br />
      <%= ff.text_field :street %>
    </div>

    <div class="field">
      <%= ff.label :home_number %><br />
      <%= ff.text_field :home_number %>
    </div>

  <% end %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
