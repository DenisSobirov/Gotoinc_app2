<h2>Create new link</h2>

<%= form_for(Link.new)  do |f| %>

  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>
