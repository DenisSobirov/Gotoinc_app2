<h2>Edit Link</h2>

<%= form_for(@link)  do |f| %>

  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back, class: "" %>
